<Window x:Class="OpenBroadcaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:OpenBroadcaster.ViewModels"
        xmlns:models="clr-namespace:OpenBroadcaster.Core.Models"
        xmlns:streaming="clr-namespace:OpenBroadcaster.Core.Streaming"
        xmlns:converters="clr-namespace:OpenBroadcaster.Converters"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="OpenBroadcaster"
        Icon="Assets/app-icon.ico"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="CanResize"
        mc:Ignorable="d">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="40"
            CornerRadius="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="6"
            UseAeroCaptionButtons="False" />
    </shell:WindowChrome.WindowChrome>
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <converters:NullToVisibleConverter x:Key="NullToVisibleConverter" />
        <LinearGradientBrush x:Key="PanelBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F2446" Offset="0" />
            <GradientStop Color="#08152B" Offset="1" />
        </LinearGradientBrush>
        <SolidColorBrush x:Key="PanelBorderBrush" Color="{StaticResource StudioPanelBorderBrush}" />
        <Style TargetType="Border" x:Key="PanelBorderStyle">
            <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource StudioPanelBorderBrush}" />
            <Setter Property="BorderThickness" Value="1.4" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="18" />
            <Setter Property="Effect" Value="{StaticResource StudioNeonGlowEffect}" />
        </Style>
        <Style TargetType="TextBlock" x:Key="SectionTitleText">
            <Setter Property="FontSize" Value="19" />
            <Setter Property="FontFamily" Value="Bahnschrift SemiBold, Segoe UI" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{StaticResource StudioMetadataTextBrush}" />
            <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource StudioBackgroundBrush}" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                x:Name="TitleBarBorder"
                Background="{StaticResource PanelBackgroundBrush}"
                BorderBrush="{StaticResource StudioAccentBrush}"
                BorderThickness="0,0,0,2"
                Padding="12 6"
                MouseDown="TitleBarBorder_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Menu VerticalAlignment="Center" shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <MenuItem Header="_File">
                        <MenuItem Header="Exit" Click="OnExitClick" />
                    </MenuItem>
                    <MenuItem Header="_Library">
                        <MenuItem Header="Manage Categories..." Command="{Binding ManageCategoriesCommand}" />
                        <Separator />
                        <MenuItem Header="Import Tracks" Command="{Binding ImportTracksCommand}" />
                        <MenuItem Header="Scan Folders" Command="{Binding ImportFolderCommand}" />
                        <Separator />
                        <MenuItem Header="Remove Uncategorized Tracks..." Command="{Binding RemoveUncategorizedTracksCommand}" />
                        <MenuItem Header="Cleanup Reserved Category Names..." Command="{Binding CleanupReservedCategoriesCommand}" />
                    </MenuItem>
                    <MenuItem Header="_Help">
                        <MenuItem Header="About OpenBroadcaster" />
                    </MenuItem>
                </Menu>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="App Settings"
                            Command="{Binding OpenAppSettingsCommand}"
                            Width="140"
                            Margin="12,0,0,0"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True" />
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="12,0,0,0">
                    <Button Width="36" Height="24" Margin="0,0,2,0" Click="MinimizeButton_Click" ToolTip="Minimize" shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock Text="_" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Button>
                    <Button Width="36" Height="24" Margin="0,0,2,0" Click="MaximizeRestoreButton_Click" ToolTip="Maximize/Restore" shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock Text="▢" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Button>
                    <Button Width="36" Height="24" Click="CloseButton_Click" ToolTip="Close" Background="#FFAA3333" shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock Text="X" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.1*" />
                <ColumnDefinition Width="1.9*" />
            </Grid.ColumnDefinitions>

            <!-- Song Library -->
            <Border Grid.Column="0" Style="{StaticResource PanelBorderStyle}" Margin="0,0,14,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="0.9*" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
                        <TextBlock Text="Song Library" Style="{StaticResource SectionTitleText}" />
                        <Border Background="#FF0F1218"
                                BorderBrush="{StaticResource StudioAccentBrush}"
                                BorderThickness="0,0,0,2"
                                Margin="12,0,0,0"
                                Padding="6,2">
                            <TextBlock Text="Ripped Graphite" Foreground="{StaticResource StudioAccentBrush}" FontSize="12" />
                        </Border>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="0,12,0,12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="260" />
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Row="0"
                                 Grid.Column="0"
                                 Margin="0,0,12,0"
                                 MinWidth="240"
                                 ToolTip="Search your library"
                                 Text="{Binding LibrarySearchText, UpdateSourceTrigger=PropertyChanged}" />

                        <ComboBox Grid.Row="0"
                                  Grid.Column="1"
                                  Margin="0,0,12,0"
                                  MinWidth="200"
                                  ItemsSource="{Binding LibraryCategories}"
                                  SelectedItem="{Binding SelectedLibraryCategory}"
                                  DisplayMemberPath="DisplayName" />

                        <WrapPanel Grid.Row="1"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   ItemHeight="30"
                                   ItemWidth="116"
                                   Margin="0,8,0,0">
                            <Button Content="Add to Queue"
                                    Margin="0,4,8,0"
                                    MinWidth="110"
                                    Height="30"
                                    Command="{Binding AddLibraryItemToQueueCommand}" />
                            <Button Content="Assign Categories"
                                    Margin="0,4,8,0"
                                    MinWidth="120"
                                    Height="30"
                                    Command="{Binding AssignCategoriesCommand}" />
                            <Button Content="Import Files"
                                    Margin="0,4,8,0"
                                    MinWidth="105"
                                    Height="30"
                                    Command="{Binding ImportTracksCommand}" />
                            <Button Content="Import Folder"
                                    Margin="0,4,0,0"
                                    MinWidth="115"
                                    Height="30"
                                    Command="{Binding ImportFolderCommand}" />
                        </WrapPanel>

                        <TextBlock Grid.Row="2"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   Margin="0,6,0,0"
                                   Foreground="{StaticResource StudioMutedTextBrush}"
                                   Text="{Binding LibraryStatusMessage}" />
                    </Grid>

                    <ListView x:Name="LibraryListView"
                              Grid.Row="2"
                              ItemsSource="{Binding LibraryItems}"
                              SelectedItem="{Binding SelectedLibraryItem}"
                              SelectionMode="Extended"
                              PreviewMouseLeftButtonDown="LibraryListView_PreviewMouseLeftButtonDown"
                              MouseMove="LibraryListView_MouseMove"
                              ScrollViewer.VerticalScrollBarVisibility="Hidden">
                        <ListView.ContextMenu>
                            <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                <MenuItem Header="Assign Categories..." Command="{Binding AssignCategoriesCommand}" />
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="200" />
                                <GridViewColumn Header="Artist" DisplayMemberBinding="{Binding Artist}" Width="140" />
                                <GridViewColumn Header="Album" DisplayMemberBinding="{Binding Album}" Width="160" />
                                <GridViewColumn Header="Genre" DisplayMemberBinding="{Binding Genre}" Width="90" />
                                <GridViewColumn Header="Categories" DisplayMemberBinding="{Binding Categories}" Width="200" />
                                <GridViewColumn Header="Year" DisplayMemberBinding="{Binding Year}" Width="60" />
                                <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding Duration}" Width="80" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Grid Grid.Row="3" Margin="0,18,0,8" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Twitch Chat" Style="{StaticResource SectionTitleText}" />
                            <Border Background="#FF0F1218"
                                    BorderBrush="#FF2C3543"
                                    BorderThickness="0,0,0,2"
                                    Margin="10,0,0,0"
                                    Padding="6,2">
                                <TextBlock Text="#openbroadcaster" Foreground="{StaticResource StudioAccentBrush}" FontSize="12" />
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="Font" Margin="0,0,4,0" Foreground="{StaticResource StudioMutedTextBrush}" FontSize="10" />
                            <Slider Width="80"
                                    Minimum="8"
                                    Maximum="20"
                                    Value="{Binding TwitchChatFontSize, Mode=TwoWay}"
                                    TickFrequency="2"
                                    IsSnapToTickEnabled="True" />
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="4" Background="#FF0E1118" BorderBrush="#FF2D313B" BorderThickness="1" CornerRadius="6">
                        <ListBox x:Name="TwitchChatListBox"
                                 ItemsSource="{Binding ChatMessages}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Margin="4"
                                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:TwitchChatMessageViewModel}">
                                    <Grid Margin="0,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Timestamp}" Foreground="{StaticResource StudioMutedTextBrush}" FontSize="{Binding DataContext.TwitchChatFontSize, RelativeSource={RelativeSource AncestorType=ListBox}}" Margin="0,0,10,0" />
                                        <TextBlock Grid.Column="1" Text="{Binding UserName}" FontWeight="SemiBold" Margin="0,0,8,0" FontSize="{Binding DataContext.TwitchChatFontSize, RelativeSource={RelativeSource AncestorType=ListBox}}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource StudioAccentBrush}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSystem}" Value="True">
                                                            <Setter Property="Foreground" Value="#FFFFB347" />
                                                            <Setter Property="FontStyle" Value="Italic" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsFromBroadcaster}" Value="True">
                                                            <Setter Property="Foreground" Value="#FF7CFFD2" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Grid.Column="2" Text="{Binding Message}" TextWrapping="Wrap" FontSize="{Binding DataContext.TwitchChatFontSize, RelativeSource={RelativeSource AncestorType=ListBox}}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#FFF5F5F5" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSystem}" Value="True">
                                                            <Setter Property="Foreground" Value="#FFFFE6B5" />
                                                            <Setter Property="FontStyle" Value="Italic" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Grid>
            </Border>

            <!-- Right Column: Decks, Queue, Cart Wall -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.7*" />
                </Grid.ColumnDefinitions>

                <!-- Deck A -->
                <Border x:Name="DeckABorder"
                        Grid.Row="0" Grid.Column="0"
                        Style="{StaticResource PanelBorderStyle}"
                        Margin="0,0,8,8"
                        AllowDrop="True"
                        Tag="A"
                        DragOver="DeckSurface_DragOver"
                        Drop="DeckSurface_Drop">
                    <Border.DataContext>
                        <Binding Path="DeckA" />
                    </Border.DataContext>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Deck A" Style="{StaticResource SectionTitleText}" />

                        <Grid Grid.Row="1" Margin="0,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Album Artwork -->
                            <Border Width="80" Height="80" 
                                    Background="#FF1A1E28" 
                                    BorderBrush="#FF2F343F" 
                                    BorderThickness="1" 
                                    CornerRadius="4"
                                    Margin="0,0,12,0">
                                <Grid>
                                    <TextBlock Text="♪" 
                                               FontSize="32" 
                                               Foreground="#FF3A4050"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               Visibility="{Binding AlbumArt, Converter={StaticResource NullToVisibleConverter}}" />
                                    <Image Source="{Binding AlbumArt}" 
                                           Stretch="UniformToFill"
                                           RenderOptions.BitmapScalingMode="HighQuality" />
                                </Grid>
                            </Border>

                            <!-- Track Info -->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Title" Foreground="{StaticResource StudioMutedTextBrush}" Margin="0,0,8,0" />
                                <TextBlock Grid.Column="1" Text="{Binding Title}" TextTrimming="CharacterEllipsis" />
                                <TextBlock Grid.Row="1" Text="Artist" Foreground="{StaticResource StudioMutedTextBrush}" Margin="0,0,8,0" />
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Artist}" TextTrimming="CharacterEllipsis" />
                                <TextBlock Grid.Row="2" Text="Elapsed" Foreground="{StaticResource StudioMutedTextBrush}" Margin="0,0,8,0" />
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ElapsedTime}" />
                                <TextBlock Grid.Row="3" Text="Remaining" Foreground="{StaticResource StudioMutedTextBrush}" Margin="0,0,8,0" />
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding RemainingTime}" />
                            </Grid>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Left">
                            <Button Content="Play" Command="{Binding PlayCommand}" Width="80" Margin="0,0,6,0" />
                            <Button Content="Stop" Command="{Binding StopCommand}" Width="80" Margin="0,0,6,0" />
                            <Button Content="Next" Command="{Binding NextCommand}" Width="80" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Deck B -->
                <Border x:Name="DeckBBorder"
                        Grid.Row="0" Grid.Column="1"
                        Style="{StaticResource PanelBorderStyle}"
                        Margin="8,0,8,8"
                        AllowDrop="True"
                        Tag="B"
                        DragOver="DeckSurface_DragOver"
                        Drop="DeckSurface_Drop">
                    <Border.DataContext>
                        <Binding Path="DeckB" />
                    </Border.DataContext>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Deck B" Style="{StaticResource SectionTitleText}" />

                        <Grid Grid.Row="1" Margin="0,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Album Artwork -->
                            <Border Width="80" Height="80" 
                                    Background="#FF1A1E28" 
                                    BorderBrush="#FF2F343F" 
                                    BorderThickness="1" 
                                    CornerRadius="4"
                                    Margin="0,0,12,0">
                                <Grid>
                                    <TextBlock Text="♪" 
                                               FontSize="32" 
                                               Foreground="#FF3A4050"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               Visibility="{Binding AlbumArt, Converter={StaticResource NullToVisibleConverter}}" />
                                    <Image Source="{Binding AlbumArt}" 
                                           Stretch="UniformToFill"
                                           RenderOptions.BitmapScalingMode="HighQuality" />
                                </Grid>
                            </Border>

                            <!-- Track Info -->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Title" Foreground="{StaticResource StudioMutedTextBrush}" Margin="0,0,8,0" />
                                <TextBlock Grid.Column="1" Text="{Binding Title}" TextTrimming="CharacterEllipsis" />
                                <TextBlock Grid.Row="1" Text="Artist" Foreground="{StaticResource StudioMutedTextBrush}" Margin="0,0,8,0" />
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Artist}" TextTrimming="CharacterEllipsis" />
                                <TextBlock Grid.Row="2" Text="Elapsed" Foreground="{StaticResource StudioMutedTextBrush}" Margin="0,0,8,0" />
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ElapsedTime}" />
                                <TextBlock Grid.Row="3" Text="Remaining" Foreground="{StaticResource StudioMutedTextBrush}" Margin="0,0,8,0" />
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding RemainingTime}" />
                            </Grid>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Left">
                            <Button Content="Play" Command="{Binding PlayCommand}" Width="80" Margin="0,0,6,0" />
                            <Button Content="Stop" Command="{Binding StopCommand}" Width="80" Margin="0,0,6,0" />
                            <Button Content="Next" Command="{Binding NextCommand}" Width="80" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Control Rack (spans rows 0-1) -->
                <Border Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Style="{StaticResource PanelBorderStyle}" Margin="8,0,0,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Control Rack" Style="{StaticResource SectionTitleText}" />
                        <Border Grid.Row="1"
                                BorderBrush="#FF2F343F"
                                BorderThickness="1"
                                CornerRadius="6"
                                Background="#FF11141C"
                                Margin="0,6,0,0"
                                Padding="8">
                            <StackPanel>
                                    <Grid Margin="0,0,0,4">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                    <ToggleButton Grid.Row="0"
                                                  IsChecked="{Binding TwitchChatEnabled}"
                                                  Margin="0,0,4,0"
                                                  HorizontalAlignment="Stretch"
                                                  Height="26"
                                                  MinWidth="0">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="10" Height="10" Stroke="#FF2F343F" StrokeThickness="1" Margin="0,0,6,0" VerticalAlignment="Center">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="#FF3A4252" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding TwitchChatEnabled}" Value="True">
                                                                <Setter Property="Fill" Value="#FF00FF00" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock Text="Enable Twitch" VerticalAlignment="Center" FontSize="11" />
                                        </StackPanel>
                                    </ToggleButton>
                                </Grid>
                                <Separator Margin="0,8,0,8" Background="#FF2F343F" Height="1" />

                                <TextBlock Text="Live Assist Rotation" Style="{StaticResource SectionTitleText}" FontSize="12" />
                                <ComboBox ItemsSource="{Binding LiveAssistRotations}"
                                          SelectedItem="{Binding SelectedLiveAssistRotation}"
                                          DisplayMemberPath="Name"
                                          Margin="0,4,0,4"
                                          Height="26"
                                          HorizontalAlignment="Stretch"
                                          IsEnabled="{Binding IsLiveAssistRotationSelectionEnabled}" />

                                <Separator Margin="0,8,0,8" Background="#FF2F343F" Height="1" />
                                <TextBlock Text="AutoDJ" Style="{StaticResource SectionTitleText}" FontSize="12" />
                                <ToggleButton IsChecked="{Binding AutoDjEnabled}"
                                              Margin="0,4,0,0"
                                              Height="26"
                                              HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="10" Height="10" Stroke="#FF2F343F" StrokeThickness="1" Margin="0,0,6,0" VerticalAlignment="Center">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#FF3A4252" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding AutoDjEnabled}" Value="True">
                                                            <Setter Property="Fill" Value="#FF00FF00" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Text="Enable AutoDJ" VerticalAlignment="Center" FontSize="11" />
                                    </StackPanel>
                                </ToggleButton>
                                <TextBlock Text="{Binding AutoDjStatusMessage}"
                                           Margin="0,4,0,0"
                                           FontSize="10"
                                           Foreground="{StaticResource StudioMutedTextBrush}"
                                           TextWrapping="Wrap" />
                                <Separator Margin="0,8,0,8" Background="#FF2F343F" Height="1" />
                                <TextBlock Text="Microphone" Style="{StaticResource SectionTitleText}" FontSize="12" />
                                <StackPanel Margin="0,4,0,0">
                                    <ToggleButton IsChecked="{Binding MicEnabled}"
                                                  Height="26"
                                                  HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="10" Height="10" Stroke="#FF2F343F" StrokeThickness="1" Margin="0,0,6,0" VerticalAlignment="Center">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="#FF3A4252" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding MicEnabled}" Value="True">
                                                                <Setter Property="Fill" Value="#FF00FF00" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock Text="Enable Mic" VerticalAlignment="Center" FontSize="11" />
                                        </StackPanel>
                                    </ToggleButton>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="32" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Level" VerticalAlignment="Center" Foreground="{StaticResource StudioMutedTextBrush}" FontSize="10" />
                                        <Slider Grid.Column="1" Minimum="0" Maximum="100" Value="{Binding MicVolume}" VerticalAlignment="Center" Margin="4,0" Height="16" />
                                        <TextBlock Grid.Column="2" Text="{Binding MicVolume, StringFormat={}{0}%}" VerticalAlignment="Center" Foreground="{StaticResource StudioMutedTextBrush}" FontSize="10" />
                                    </Grid>
                                </StackPanel>
                                    <CheckBox Content="Auto fade mic"
                                              IsChecked="{Binding MicDuckingEnabled}"
                                              Margin="0,6,0,0"
                                              Foreground="{StaticResource StudioMutedTextBrush}"
                                              FontSize="10" />
                                    <Separator Margin="0,8,0,8" Background="#FF2F343F" Height="1" />
                                    <TextBlock Text="Output Level" Style="{StaticResource SectionTitleText}" FontSize="12" />
                                    <Grid Margin="0,4,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="32" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Level" VerticalAlignment="Center" Foreground="{StaticResource StudioMutedTextBrush}" FontSize="10" />
                                        <Slider Grid.Column="1" Minimum="0" Maximum="100" Value="{Binding MasterVolume, Mode=TwoWay}" VerticalAlignment="Center" Margin="4,0" Height="16" />
                                        <TextBlock Grid.Column="2" Text="{Binding MasterVolume, StringFormat={}{0}%}" VerticalAlignment="Center" Foreground="{StaticResource StudioMutedTextBrush}" FontSize="10" />
                                    </Grid>
                                    <Separator Margin="0,8,0,8" Background="#FF2F343F" Height="1" />
                                    <TextBlock Text="Encoders" Style="{StaticResource SectionTitleText}" FontSize="12" />
                                    <ToggleButton IsChecked="{Binding EncodersEnabled}"
                                                  HorizontalAlignment="Stretch"
                                                  Height="26"
                                                  Margin="0,4,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="10" Height="10" Stroke="#FF2F343F" StrokeThickness="1" Margin="0,0,6,0" VerticalAlignment="Center">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="#FF3A4252" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding EncodersEnabled}" Value="True">
                                                                <Setter Property="Fill" Value="#FF00FF00" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock Text="Start Encoders" VerticalAlignment="Center" FontSize="11" />
                                        </StackPanel>
                                    </ToggleButton>
                                    <TextBlock Text="{Binding EncoderStatusMessage}"
                                               Margin="0,4,0,0"
                                               FontSize="10"
                                               TextWrapping="Wrap"
                                               Foreground="{StaticResource StudioMutedTextBrush}" />
                                    <ItemsControl ItemsSource="{Binding EncoderStatuses}" Margin="0,4,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type vm:EncoderStatusViewModel}">
                                                <Grid Margin="0,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Ellipse Width="10" Height="10" Stroke="#FF2F343F" StrokeThickness="1">
                                                            <Ellipse.Style>
                                                                <Style TargetType="Ellipse">
                                                                    <Setter Property="Fill" Value="#FF555C6E" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding State}" Value="{x:Static streaming:EncoderState.Streaming}">
                                                                            <Setter Property="Fill" Value="#FF4DF09C" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding State}" Value="{x:Static streaming:EncoderState.Connecting}">
                                                                            <Setter Property="Fill" Value="#FFF2B94C" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding State}" Value="{x:Static streaming:EncoderState.Failed}">
                                                                            <Setter Property="Fill" Value="#FFFF6B6B" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Ellipse.Style>
                                                        </Ellipse>
                                                        <TextBlock Text="{Binding Name}" Margin="4,0,0,0" FontWeight="SemiBold" FontSize="11" />
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding Message}"
                                                               FontSize="10"
                                                               Foreground="{StaticResource StudioMutedTextBrush}" />
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding LastConnectedDisplay}"
                                                               Foreground="{StaticResource StudioMutedTextBrush}"
                                                               FontSize="10" />
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <!-- Digital Clock -->
                                    <Separator Margin="0,8,0,8" Background="#FF2F343F" Height="1" />
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,4">
                                        <TextBlock Text="{Binding CurrentTime}"
                                                   FontFamily="Consolas"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource StudioAccentBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0" />
                                        <ToggleButton Width="32"
                                                      Height="18"
                                                      VerticalAlignment="Center"
                                                      IsChecked="{Binding Use24HourClock, Mode=TwoWay}"
                                                      ToolTip="Toggle 24-hour / 12-hour clock">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="24" FontSize="10" Visibility="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                <TextBlock Text="12" FontSize="10" Visibility="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </ToggleButton>
                                    </StackPanel>
                                    <StackPanel Margin="0,6,0,0">
                                        <TextBlock Text="Program VU" Foreground="{StaticResource StudioMutedTextBrush}" FontSize="10" />
                                        <ProgressBar Value="{Binding ProgramVu, Mode=OneWay}" Maximum="1" Height="8" Margin="0,2,0,2" />
                                        <TextBlock Text="Encoder VU" Foreground="{StaticResource StudioMutedTextBrush}" FontSize="10" />
                                        <ProgressBar Value="{Binding EncoderVu, Mode=OneWay}" Maximum="1" Height="8" Margin="0,2,0,2" />
                                        <TextBlock Text="Mic VU" Foreground="{StaticResource StudioMutedTextBrush}" FontSize="10" />
                                        <ProgressBar Value="{Binding MicVu, Mode=OneWay}" Maximum="1" Height="8" Margin="0,2,0,0" />
                                    </StackPanel>
                                    </StackPanel>
                                    </Border>
                        </Grid>
                </Border>

                <!-- Queue (spans columns 0-1, below decks) -->
                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource PanelBorderStyle}" Margin="0,0,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Program Queue" Style="{StaticResource SectionTitleText}" />
                                <Button Content="Shuffle" Margin="16,0,0,0" Width="96" Command="{Binding ShuffleQueueCommand}" />
                                <Button Content="Clear" Margin="8,0,0,0" Width="96" Command="{Binding ClearQueueCommand}" />
                            </StackPanel>
                                <WrapPanel Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       ItemHeight="36"
                                       ItemWidth="130"
                                       Orientation="Horizontal">
                                <Button Content="Remove Selected"
                                    Margin="0,4,0,0"
                                    MinWidth="130"
                                    Command="{Binding RemoveQueueItemCommand}" />
                                </WrapPanel>
                        </Grid>

                        <ListBox x:Name="QueueListBox"
                                 Grid.Row="1"
                                 ItemsSource="{Binding QueueItems}"
                                 SelectedItem="{Binding SelectedQueueItem}"
                                 Margin="0,12,0,0"
                                 AllowDrop="True"
                                 Background="#0F131D"
                                 BorderBrush="#1C2230"
                                 BorderThickness="1"
                                 Padding="4"
                                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                 PreviewMouseLeftButtonDown="QueueListBox_PreviewMouseLeftButtonDown"
                                 PreviewMouseRightButtonDown="QueueListBox_PreviewMouseRightButtonDown"
                                 MouseMove="QueueListBox_MouseMove"
                                 DragOver="QueueListBox_DragOver"
                                 Drop="QueueListBox_Drop">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Margin" Value="0,3" />
                                    <Setter Property="Padding" Value="0" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ContextMenu>
                                <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                    <MenuItem Header="Remove" Command="{Binding RemoveQueueItemCommand}" />
                                </ContextMenu>
                            </ListBox.ContextMenu>
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:QueueItemViewModel}">
                                    <Border Background="#121826" Padding="10" CornerRadius="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                                <TextBlock Grid.Column="1" Text="{Binding Duration}" Foreground="{StaticResource StudioMutedTextBrush}" />
                                            </Grid>
                                            <Grid Grid.Row="1" Margin="0,4,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Artist}" Foreground="{StaticResource StudioMutedTextBrush}" />
                                                <Border Grid.Column="1"
                                                        Background="#1E2532"
                                                        Padding="6,2"
                                                        CornerRadius="4"
                                                        Margin="8,0,0,0">
                                                    <TextBlock Text="{Binding Source}" FontSize="11" Foreground="{StaticResource StudioAccentBrush}" />
                                                </Border>
                                            </Grid>
                                            <!-- Twitch Request with green neon border -->
                                            <Border Grid.Row="2"
                                                    Margin="0,6,0,0"
                                                    Padding="8,4"
                                                    CornerRadius="4"
                                                    BorderThickness="1"
                                                    BorderBrush="#39FF14"
                                                    Background="#1A39FF14">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#39FF14" BlurRadius="8" ShadowDepth="0" Opacity="0.6" />
                                                </Border.Effect>
                                                <TextBlock Text="{Binding RequestedByDisplay}" 
                                                           FontSize="11" 
                                                           FontWeight="SemiBold"
                                                           Foreground="#39FF14" />
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsTwitchRequest}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <!-- Website Request with green neon border including listener message -->
                                            <Border Grid.Row="2"
                                                    Margin="0,6,0,0"
                                                    Padding="8,4"
                                                    CornerRadius="4"
                                                    BorderThickness="1"
                                                    BorderBrush="#39FF14"
                                                    Background="#1A39FF14">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#39FF14" BlurRadius="8" ShadowDepth="0" Opacity="0.6" />
                                                </Border.Effect>
                                                <TextBlock Text="{Binding WebRequestDisplay}"
                                                           FontSize="11"
                                                           FontWeight="SemiBold"
                                                           Foreground="#39FF14"
                                                           TextWrapping="Wrap" />
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsWebRequest}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <!-- Other request summary (non-Twitch, non-AutoDJ) -->
                                            <TextBlock Grid.Row="3"
                                                       Text="{Binding RequestSummary}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource StudioMutedTextBrush}"
                                                       Margin="0,6,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasRequestSummary}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                    </Grid>
                </Border>

                <!-- Cart Wall -->
                <Border x:Name="CartWallPanel" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource PanelBorderStyle}" Margin="0,0,0,4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <TextBlock Text="Cart Wall" Style="{StaticResource SectionTitleText}" />
                            <TextBlock Text="Hot triggers" Margin="12,0,0,0" Foreground="{StaticResource StudioMutedTextBrush}" VerticalAlignment="Center" />
                            
                            <!-- Cart Wall Volume Slider -->
                            <StackPanel Orientation="Horizontal" Margin="30,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Volume:" Foreground="{StaticResource StudioMutedTextBrush}" VerticalAlignment="Center" Margin="0,0,8,0" />
                                <Slider Width="120" 
                                        Minimum="0" 
                                        Maximum="100" 
                                        Value="{Binding CartWallVolume, Mode=TwoWay}"
                                        VerticalAlignment="Center"
                                        TickFrequency="10"
                                        IsSnapToTickEnabled="True" />
                                <TextBlock Text="{Binding CartWallVolume, StringFormat='{}{0}%'}" 
                                           Width="40"
                                           Foreground="White" 
                                           VerticalAlignment="Center" 
                                           Margin="8,0,0,0" />
                            </StackPanel>
                        </StackPanel>

                        <ItemsControl Grid.Row="1"
                                      Margin="0,8,0,0"
                                      ItemsSource="{Binding CartPads}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemWidth="140" ItemHeight="80" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:CartPad}">
                                    <Button Command="{Binding DataContext.TriggerCartCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Margin="4"
                                            Height="78"
                                            Background="{Binding ColorHex}"
                                            BorderBrush="#FF3C4654"
                                            ToolTip="{Binding StatusMessage}"
                                            Opacity="{Binding EmphasisOpacity}">
                                        <Button.InputBindings>
                                            <MouseBinding MouseAction="RightClick"
                                                          Command="{Binding DataContext.AssignCartFromPickerCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                          CommandParameter="{Binding}" />
                                        </Button.InputBindings>
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                                <Setter Property="BorderThickness" Value="1" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPlayable}" Value="False">
                                                        <Setter Property="BorderBrush" Value="#FFFF6B6B" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                        <Setter Property="BorderBrush" Value="#FF00FF00" />
                                                        <Setter Property="BorderThickness" Value="4" />
                                                        <Setter Property="Opacity" Value="1" />
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect Color="#FF00FF00"
                                                                                  BlurRadius="18"
                                                                                  ShadowDepth="0"
                                                                                  Opacity="0.95" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Label}" FontWeight="SemiBold" />
                                            <TextBlock Text="Loop"
                                                       FontSize="10"
                                                       Foreground="{StaticResource StudioAccentBrush}"
                                                       HorizontalAlignment="Left">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding LoopEnabled}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Hotkey}" FontSize="11" Foreground="{StaticResource StudioMutedTextBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Hotkey}" Value="">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Hotkey}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding StatusMessage}" FontSize="11" TextWrapping="Wrap">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Setter Property="Foreground" Value="#FFFFAAAA" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsPlayable}" Value="False">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
